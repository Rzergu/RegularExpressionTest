<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="GreyColor">#f5f5f5</Color>
    <SolidColorBrush x:Key="GreyColorBrush"
                     Color="{StaticResource GreyColor}" />

    <Color x:Key="BlueColor">#0078d6</Color>
    <SolidColorBrush x:Key="BlueColorBrush" 
                     Color="{StaticResource BlueColor}" />

    <Color x:Key="BlackColor">#000000</Color>
    <SolidColorBrush x:Key="BlackColorBrush"
                     Color="{StaticResource BlackColor}"/>

    <Color x:Key="BorderColor">#838484</Color>
    <SolidColorBrush x:Key="BorderColorBrush"
                     Color="{StaticResource BorderColor}"/>

</ResourceDictionary>